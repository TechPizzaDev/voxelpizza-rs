    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug exe 'voxelpizza-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=voxelpizza-rs",
                    "--package=voxelpizza-rs"
                ],
                "filter": {
                    "name": "voxelpizza-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "CARGO_MANIFEST_DIR" : "${workspaceFolder}",
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug tests 'voxelpizza-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=voxelpizza-rs",
                    "--package=voxelpizza-rs"
                ],
                "filter": {
                    "name": "voxelpizza-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}