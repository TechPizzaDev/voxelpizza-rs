    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "'bloom' example",
            "cargo": {
                "args": [
                    "build",
                    "--example=bloom",
                    "--package=voxelpizza-rs"
                ],
                "filter": {
                    "name": "bloom",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "CARGO_MANIFEST_DIR" : "${workspaceFolder}"
            },
        },
        {
            "type": "lldb",
